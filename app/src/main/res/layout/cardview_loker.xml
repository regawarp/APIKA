<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_loker"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/jobTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senior Android Dev"
                android:textSize="18sp"
                android:fontFamily="Arial"
                android:layout_marginBottom="5dp"/>
            <View
                android:id="@+id/line"
                android:layout_below="@id/jobTitle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey"/>
            <TextView
                android:id="@+id/jobFee"
                android:layout_below="@id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="IDR 8.000.000 - 10.000.000"/>
            <TextView
                android:id="@+id/jobLocation"
                android:layout_below="@id/jobFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Arjuna Creative Studio"/>
            <TextView
                android:id="@+id/jobPosted"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="12 days ago"/>
            <Button
                android:id="@+id/btnApply"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:text="Apply"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"/>
            <Button
                android:id="@+id/btnDetail"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:text="Detail"
                android:layout_toStartOf="@id/btnApply"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:layout_marginEnd="6dp"
                android:textSize="13sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>